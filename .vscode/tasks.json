{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C++ Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "Person.cpp",
                "-o",
                "student_program.exe",
                "&&",
                "student_program.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles main.cpp and Person.cpp, then runs the program"
        },
        {
            "label": "Build Only C++ Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "Person.cpp",
                "-o",
                "student_program.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles main.cpp and Person.cpp without running"
        },
        {
            "label": "Run Only",
            "type": "shell",
            "command": "student_program.exe",
            "group": "build",
            "dependsOn": "Build Only C++ Project",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Runs the already compiled program"
        }
    ]
}